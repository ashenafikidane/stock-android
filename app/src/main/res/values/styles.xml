<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- Toolbar Style -->
    <style name="Widget.stock.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">@android:color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <!-- Buttons styles -->
    <style name="stock.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:radius">5dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
